CC = @CC@
AR = @AR@
CFLAGS = @CFLAGS@

top_srcdir=@top_srcdir@
srcdir=@srcdir@
VPATH=@srcdir@

all clean :
	cd common && make $@
	cd network && make $@
	cd cmdline && make $@
	make local-$@

local-all :

local-clean :

install :

Makefile common/Makefile network/Makefile cmdline/Makefile: Makefile.in common/Makefile.in network/Makefile.in cmdline/Makefile.in config.status
	./config.status

config.status : configure
	./config.status --recheck

configure config.h.in : configure.ac
	cd $(srcdir) && autoheader && autoconf
